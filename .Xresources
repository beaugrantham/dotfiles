! vim: set ft=xdefaults

! Set the font
URxvt*font: xft:Inconsolata-Regular:pixelsize=15
URxvt*boldFont: xft:Inconsolata-Bold:pixelsize=15

! Terminal window size
URxvt*geometry: 95x32

! Disable scrollbar
URxvt.scrollBar: false

! Set urxvt as login shell
URxvt*loginShell: true

! Set terminal padding
URxvt.internalBorder: 15

! Set colors
URxvt.background: #232323
URxvt.foreground: #C0C0C0

URxvt.colorBD:    #CFCFCF
URxvt.colorUL:    #A0A0A0
URxvt.colorIT:    #686868

!BLK
